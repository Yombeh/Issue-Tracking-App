@model Issue_Tracking_App.Models.ApplicationsViewModel;

<div style="margin-top: 80px; background-color: deepskyblue; padding: 10px">
     <h1 style="text-align: center; color:white">ISSUE TRACKING APP</h1>
</div>
<h2 Style="margin-top: 10px">Create Issue</h2>
<form method="post">

    <div class="mt-3">
        <label class="form-label">Application with Issue</label>
        
        <select class="form-control select2" asp-for="ApplicationID">
            <option value="" disabled selected>Select the Application</option>
            @foreach (var app in Model.Applications)
            {
                <option value="@app.AppId">@app.AppName</option>
            }
        <span asp-validation-for="ApplicationID" class="text-danger"></span>
        </select>
    </div> 

    <div class="mt-3">
        <label class="form-label">Summary of The Issue</label>
        <input class="form-control" type="text" asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Issue Start Date</label>
        <input class="form-control" id="datepicker" asp-for="DatePicker">
        <span asp-validation-for="DatePicker" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Send</button>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Select or Search ",
                allowClear: true,
              
                
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   
}

