@model Issue_Tracking_App.Models.TesterViewModel

<h2 style=" margin-top: 80px"></h2>

<table class="table table-bordered table-striped">

    <tr>
        <th>User</th>
        <td>@Model.IssueCreated.userName</td>
    </tr>

    <tr>
        <th>Application</th>
        <td>@Model.appName</td>
    </tr>

    <tr>
        <th>Description</th>
        <td>@Model.IssueCreated.Description</td>
    </tr>

    <tr>
        <th>Date</th>
        <td>@Model.IssueCreated.DatePicker</td>
    </tr>

    <tr>
        <th>Created</th>
        <td>@Model.IssueCreated.CreatedDate</td>
    </tr>

    <tr>
        <th>Admin</th>
        <td>@Model.Comment</td>
    <tr>

</table>

<div class="mt-3">

<form method="post">
    <label class="form-label">Describe the Issue</label>
    <input class="form-control" type="text" asp-for="testersComment">
    <button class="btn btn-primary mt-3">Send</button>
</form>

</div>







