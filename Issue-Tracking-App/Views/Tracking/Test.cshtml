@model Issue_Tracking_App.Models.TesterViewModel

<h3 style="margin-top: 68px ">Details</h3>
<table class="table table-bordered table-striped" method="post">
    <tr>
        <th>User</th>
        <td>@Model.userName</td>
    </tr>

    <tr>
        <th>Application</th>
        <td>@Model.appName</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.IssueCreated.Description</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>@Model.IssueCreated.DatePicker</td>
    </tr>
    <tr>
        <th>Created</th>
        <td>@Model.IssueCreated.DatePicker</td>
    </tr>

</table>
    <h2 style="text-align: center;">SEND TO A TESTER </h2>
    <form method="Post">
    <div class="mt-s">

        <label class="form-label">Tester</label>
         <select asp-for="Tester" class="form-control">
             <option value="" disabled selected>Select Tester</option>
               <option value="hcham">Hawa Cham</option>
               <option value="anndure">Anna Ndure</option>
               <option value="najaiteh">Ndey Astou Jaiteh</option>
               <option value="gthomas">Gilleh Thomas</option>
               <span asp-validation-for="Tester" class="text-danger"></span>
           </select>

    <div class="mt-3">

        <label class="form-label">Add Comment</label>
        <input class="form-control" type="text" asp-for="Comment">
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Send</button>

    </div>
</form>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
