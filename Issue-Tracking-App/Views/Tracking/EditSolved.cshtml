@model Issue_Tracking_App.Models.EditSolvedViewModel;

<h2>Edit the Issue</h2>
@if (Model is null)
{
    <h2>Not Found</h2>
}
else
{
    <!DOCTYPE html>
    <html>
    <head>
        <title>Issue Tracking App</title>
    </head>

    <body>
        <h2 style="margin-top:40px;">Edit Resolved Issue</h2>
        <form asp-controller="Tracking" asp-action="EditSolved" method="post">
            <div class="mt-3">
                <label class="form-label">Issue </label>
                <Select class="form-control" asp-for="IssuesID">
                    <option value="" disabled selected>Select The Issue</option>

                    @foreach (var issue in Model.Issues)
                    {
                        <option value="@issue.IssueNumber">@issue.Summary </option>
                    }
                </Select>

            </div>



            <div class="mt-3">
                <label class="form-label">Solved By</label>
                <select class="form-control" asp-for="AssigneeID">
                    <option value="" disabled selected>Select The Assignee</option>
                    @foreach (var assignee in Model.Assignees)
                    {
                        <option value="@assignee.Id">@assignee.AssigneeName</option>
                    }
                </select>
            </div>


            <div class="mt-3">
                <label class="form-label">Severity </label>
                <select class="form-control" asp-for="SeverityID">
                    <option value="" disabled selected>Select The Severity</option>
                    @foreach (var Severity in Model.Severities)
                    {
                        <option value="@Severity.Id">@Severity.SeverityName</option>
                    }
                </select>

            </div>

            <div class="mt-3">
                <label class="form-label">Duration(Hours)</label>
                <input class="form-control" type="text" asp-for="EstimateTime">
            </div>

            <div class="mt-3">
                <label class="form-label">Add Comment</label>
                <input class="form-control" type="text" asp-for="Comment">
            </div>

            <div class="mt-3">
                <button class="btn btn-primary" type="submit"> Save</button>
            </div>

            
        </form>

    </body>
    
    </html>
    
}






